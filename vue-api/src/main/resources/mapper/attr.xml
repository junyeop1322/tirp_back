<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.vue.attr.model.mapper.AttrMapper">

    <resultMap type="AttrDto" id="attr">
        <result column="content_id" property="contentId"/>
        <result column="content_type_id" property="contentTypeId"/>
        <result column="title" property="title"/>
        <result column="addr1" property="addr1"/>
        <result column="addr2" property="addr2"/>
        <result column="zipcode" property="zipcode"/>
        <result column="tel" property="tel"/>
        <result column="first_image" property="firstImage"/>
        <result column="first_image2" property="firstImage2"/>
        <result column="readcount" property="readcount"/>
        <result column="sido_code" property="sidoCode"/>
        <result column="gugun_code" property="gugunCode"/>
        <result column="latitude" property="latitude"/>
        <result column="longitude" property="longitude"/>
        <result column="mlevel" property="mlevel"/>
    </resultMap>

    <!-- 검색 가능한 총 관광지 수 -->
    <select id="countAttr" parameterType="int" resultType="int">
        select count(content_id)
        from attraction_info
    </select>

    <!-- 검색 가능한 총 관광지 수 -->

    <!-- 시도 코드에 따른 구군 데이터 -->
    <select id="gugunSido" parameterType="map" resultType="attrDto">
        select g.gugun_code, g.gugun_name
        from gugun as g
        join sido as a
        on g.sido_code = s.sido_code
        where s.sido_code = #{sidoCode}
    </select>

</mapper>